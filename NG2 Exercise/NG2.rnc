start = recipe
recipe = element recipe {title , para , IngredientList , conclusion}
title = element title {text}

para = element para {n, mixed{(teacher | book | year | step)*}}
step = element step {n+ | text}
teacher = element teacher {text}
book = element book {text}
year = element year {text}
n = attribute n {xsd:integer}
IngredientList = element IngredientList {amount+ | ing+}

amount = element  amount {type}
ing = element ing {text}
type = attribute type {text}
conclusion = element conclusion {text}